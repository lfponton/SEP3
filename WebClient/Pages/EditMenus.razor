@page "/EditMenus"
@inject NavigationManager NavigationManager
<h3>EditMenus</h3>
<div class="text-center">
    
        <div class="card-body">
            <div class="form-group">
                <label>Name</label>
                <input class="form-control" type="text" placeholder="Name" @bind-value="Name"/>
            </div>

            <div class="form-group">
                <label>Type</label>
                <input class="form-control" type="text" placeholder="Type" @bind-value="Type"/>
            </div>

            <div class="form-group">
                <label>Description</label>
                <input class="form-control" type="text" placeholder="Description" @bind-value="Description"/>
            </div>

            <div class="form-group">
                <label>Price</label>
                <input class="form-control" type="text" placeholder="Price" @bind-value="Price"/>
            </div>
       
            <p>Menus</p>
        </div>
       


    <p>Name:@Name</p>
    <p>Type: @Type</p>
    <p>Description: @Description</p>
    <p>Price: @Price</p>

    <button class=" btn btn-primary mr-1" @onclick="Back">Back</button>
    <button class=" btn btn-primary mr-1" @onclick="Save">Save</button>


</div>
@code {
    [Parameter]
    public int Id { get; set; }

    private EditMenus editMenus;
    
    private string Name;
    private double Price;
    private string Type;
    private string Description;
    
    protected override async Task OnInitializedAsync()
    {
        editMenus = Seed();
    }

    private EditMenus Seed()
    {
        return editMenus;
    }
    private void Back()
    {
        NavigationManager.NavigateTo("/ViewMenus");
    }


    private void Save()
    {
        NavigationManager.NavigateTo("/AllMenus");
    }
}