@page "/AllMenuItems"
@inject NavigationManager NavigationManager
<h3>AllMenuItems</h3>
<div class="text-center">
    <h3 style="margin-bottom: 5%">AllMenuItems</h3>
    <table width="400"cellpadding="10"cellspacing="5">
        <tr>
            <th width="150"></th>
            <th>MenuItem Id</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
        <tr>
            <th>MenuItem 1</th>
            <td>1</td>
            <td>Fries</td>
            <td>200</td>
        </tr>
        <button class=" btn btn-primary mr-1" @onclick="Edit">Edit </button>
        <button class=" btn btn-primary mr-1" @onclick="Delete">Delete</button>
        <tr>
            <th>MenuItem 2</th>
            <td>2</td>
            <td>Nuggets</td>
            <td>120</td>
        </tr>
        <button class=" btn btn-primary mr-1" @onclick="Edit">Edit</button>
        <button class=" btn btn-primary mr-1" @onclick="Delete">Delete</button>
        
    </table>
    <button class=" btn btn-primary mr-1" @onclick="Back">Back</button>
    <button class=" btn btn-primary mr-1" @onclick="Save">Save</button>
    
   
</div>
    
@code {
    [Parameter]
    public int Id { get; set; }

    private AllMenuItems allMenuItems;
    
    private string Name;
    private double Price;

    protected override async Task OnInitializedAsync()
    {
        allMenuItems = Seed();
    }

    private AllMenuItems Seed()
    {
        return allMenuItems;
    }
    private void Back()
    {
        NavigationManager.NavigateTo("/ViewMenuItems");
    }

    private void Edit()
    {
        NavigationManager.NavigateTo("/EditMenuItems");
    }
    private void Save()
    {
        NavigationManager.NavigateTo("/Menus");
    }

    private void Delete()
    {
        NavigationManager.NavigateTo("/DeleteMenuItems");
    }
    

}
}